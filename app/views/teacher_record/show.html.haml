= render "common/teacher_header", title: "学習記録 (#{@startWeek}~) #{@student.name}"
.main
  .record
    .record__title
      .record__title__time
        %p 6:00
        %p 15:00
        %p 24:00
      .record__title__summary
        %p 国
        %p 数
        %p 英
        %p 理
        %p 社
      .record__title__comment
        %p 総括
    = render partial: "record_row", collection: @records, as: "record"
    .record__feedback
      フィードバック
      - comment = Comment.where(user_id: current_user.id).where(comment_at: @startWeek).take
      - if comment.nil?
        = form_for Comment.new, url: comment_index_path, method: :post do |f|
          =f.hidden_field :comment_at, value: @startWeek
          =f.text_area :comment, class: "record__feedback__input"
          =f.submit "登録", class: "record__feedback__submit", style: "display: none;"
      - else
        = form_for comment, url: comment_path(comment.id), method: :patch do |f|
          =f.hidden_field :comment_at
          =f.text_area :comment, class: "record__row__comment__input"
          =f.submit "保存", class: "record__feedback__submit", style: "display: none;"
