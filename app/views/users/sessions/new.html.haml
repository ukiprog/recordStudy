.devise
  %h1 学習記録
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .devise__field
      = f.label :email, class: "devise__field__label"
      = f.email_field :email, class: "devise__field__input", autofocus: true, autocomplete: "email"
    .devise__field
      = f.label :password, class: "devise__field__label"
      = f.password_field :password, class: "devise__field__input", autocomplete: "current-password"
    - if devise_mapping.rememberable?
      .devise__field
        = f.check_box :remember_me
        = f.label :remember_me
    .devise__field
      = f.submit "ログイン", class: "devise__field__submit"
  = render "users/shared/links"
