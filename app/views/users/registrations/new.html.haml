.devise
  %h1 新規登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .devise__field
      = f.label :position, class: "devise__field__label"
      = f.select :position, [%w(生徒 student), %w(先生 teacher)], {}, class: "devise__field__input"
    .devise__field
      = f.label :name, class: "devise__field__label"
      = f.text_field :name, class: "devise__field__input", autofocus: true, autocomplete: "name"
    .devise__field
      = f.label :email, class: "devise__field__label"
      = f.email_field :email, class: "devise__field__input", autofocus: true, autocomplete: "email"
    .devise__field
      = f.label :password, class: "devise__field__label"
      = f.password_field :password, class: "devise__field__input", autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum"
    .devise__field
      = f.label :password_confirmation, class: "devise__field__label"
      = f.password_field :password_confirmation, class: "devise__field__input", autocomplete: "new-password"
    .devise__field
      = f.submit "登録", class: "devise__field__submit"
  = render "users/shared/links"
